<body>
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-4">
                <h2>所有會員列表</h2>
            </div>

            <div class="col-lg-8">
                <a href="/padkaka/admin/create/prod/" class="btn btn-success btn-sm">匯出</a>
            </div>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>會員帳號</th>
                    <th>連結賬戶</th>
                    <th>詳細</th>
                </tr>
            </thead>
            <tbody>
                <% users.content.forEach(function(user, index){ %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= user.account %></td>
                        <td><%= user.fb_id %></td>
                        <td>
                            <a
                                href=<%= "/padkaka/admin/show/user/" + user._id %>
                                class="btn btn-info btn-sm">查看</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <div class="text-center">
            <%- include('components/Pagination', options) %>
        </div>
    </div>

</body>
